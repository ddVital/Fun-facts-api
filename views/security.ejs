<section class="profile">
  <%- include ("./partials/sidebar", {active: "security"}); %>
  <section>
    <h2>Change password</h2>
    <form action="/user/security" method="POST">
      <input
        type="password"
        name="old"
        placeholder="Old Password"
        autocomplete="off"
      />
      <input
        type="password"
        name="password"
        placeholder="New Password"
        autocomplete="off"
      />
      <input
        type="password"
        name="confirmation"
        placeholder="new Password confirmation"
        autocomplete="off"
      />
      <%- include ("./partials/messages"); %>
      <button class="btn btn--large">Update</button>
    </form>
  </section>
</section>
