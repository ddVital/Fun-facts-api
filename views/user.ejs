<section class="profile">
  <%- include ("./partials/sidebar", {active: "account"}); %>

  <section>
    <h2>Profile</h2>
    <form action="/user" method="POST">
      <input
        type="email"
        name="email"
        value="<%= user.email %>"
        placeholder="Email"
        autocomplete="off"
      />
      <input
        type="text"
        name="name"
        value="<%= user.name %>"
        placeholder="Name"
        autocomplete="off"
      />
      <%- include ("./partials/messages"); %>

      <button class="btn btn--large">Update</button>
    </form>
    <hr />
    <a href="/logout">Logout</a>
    <hr />
    <a href="/user/delete" class="alert">Delete Account</a>
  </section>
</section>
